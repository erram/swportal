        <div class="row">
            <div class="sample">
                <h2>Sample 1: Save to disk</h2>
                <form action="/news/save" method="POST">
                    <input id="title" name="editor_title"></input>
                    <textarea id="edit" name="editor_content"></textarea>
                    <button>Submit</button>
                </form>
                <button id="saveButton">Save</button>
                
            </div>
            <script>
                $(function () {
                    var titletext = "inittext";
                    $('#edit').froalaEditor({
                        imageUploadURL: '/upload_image',
                        imageUploadParams: {
                            id: 'my_editor'
                        },

                        fileUploadURL: '/upload_file',
                        fileUploadParams: {
                            id: 'my_editor'
                        },

                        imageManagerLoadURL: '/load_images',
                        imageManagerDeleteURL: "/delete_image",
                        imageManagerDeleteMethod: "POST",

                        // Set the save param.
                        saveParam: 'content',

                        // Set the save URL.
                        saveURL: 'news/save',

                        // HTTP request type.
                        saveMethod: 'POST',

                        // Additional save params.
                        saveParams: { title: titletext }
                    })
                        // Catch image removal from the editor.
                        .on('froalaEditor.image.removed', function (e, editor, $img) {
                            $.ajax({
                                // Request method.
                                method: "POST",

                                // Request URL.
                                url: "/delete_image",

                                // Request params.
                                data: {
                                    src: $img.attr('src')
                                }
                            })
                                .done(function (data) {
                                    console.log('image was deleted');
                                })
                                .fail(function (err) {
                                    console.log('image delete problem: ' + JSON.stringify(err));
                                })
                        })
                        // Catch file removal from the editor.
                        .on('froalaEditor.file.unlink', function (e, editor, link) {

                            $.ajax({
                                // Request method.
                                method: "POST",

                                // Request URL.
                                url: "/delete_file",

                                // Request params.
                                data: {
                                    src: link.getAttribute('href')
                                }
                            })
                                .done(function (data) {
                                    console.log('file was deleted');
                                })
                                .fail(function (err) {
                                    console.log('file delete problem: ' + JSON.stringify(err));
                                })
                        })
                        .on('froalaEditor.save.before', function (e, editor) {
                            titletext = document.getElementById('title').value
                            console.log(e)
                            saveParams: {
                                lofasz: titletext
                            }
                        })
                        .on('froalaEditor.save.after', function (e, editor, response) {
                            // After successfully save request.
                        })
                        .on('froalaEditor.save.error', function (e, editor, error) {
                            // Do something here.
                        })
                });
