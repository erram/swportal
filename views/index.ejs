<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style/app.css">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <style>
        p {
            font-size:14px;
        }
        .hero-rotator a {
            color:black;
            position:relative;
            text-align:center;
        }
        .imagecontent {
            position: absolute;
            bottom: 0px;
            left: 0px;
            padding: 0px 0px 15px 15px;
            width: 280px;
        }
    </style>
</head>
<body>
    <% include header %>
    <div id="main-content" class="container">

        <div class="hero-rotator">
            <a href="https://swsorsok.herokuapp.com/news/item/54ae7b96-06e7-444e-b43b-100f56386211">
                <img src="rota/1.jpg" />
                <div class="imagecontent">
                    <h5>Megérkezett és az erő vele van!</h5>
                    <span>Elindult az új Star Wars sorsok weblap!</span>
                </div>
            </a>
            <a href="https://swsorsok.herokuapp.com/events">
                <img src="rota/2.jpg" />
                <div class="imagecontent">
                    <h5>Közelgő események!</h5>
                </div>
            </a>
            <a href="http://www.deltavision.hu/kartyajatek/swsorsok/">
                <img src="rota/3.jpg" />
                <div class="imagecontent">
                    <h5>Webshop!</h5>
                    <span>Riválisok készlet már kapható!</span>
                </div>
            </a>
        </div>

        <div class="article-container">

            <% for(var i=0; i < newsitems.length; i++) { %>
            <div class="article">
                <div class="image-content">
                    <a href=""><img src="/uploaded_images/<%=newsitems[i].coverimage%>"></a>
                </div>
                <div class="text-content">
                    <div class="title-content">
                        <div class="date">
                            <span class="day"><%= moment(newsitems[i].Dátum, "MM-DD-YYYY").date() %></span>
                            <span class="mo-ye"><%= moment(newsitems[i].Dátum).subtract(0, "month").startOf("month").format('MMM') %> <%= moment(newsitems[i].Dátum).year() %></span>
                        </div>
                        <div class="title">
                            <h2><a href="/news/item/<%= newsitems[i].ID %>"><%= newsitems[i].Cím %></a></h2>
                            <span class="publisher"><a href=""><%= newsitems[i].Szerző %></a></span>
                            <span class="category"><a href=""><%= newsitems[i].Kategória %></a></span>
                            <% if(newsitems[i].commentcounter) {%>
                                <span class="comments"><a href=""><%= newsitems[i].commentcounter %></a></span>
                            <% } %> 
                        </div>
                    </div>
                    <div class="article-lead">
                        <%- trunc(newsitems[i].Summary,130) %>
                    </div>
                </div>
            </div>
            <% } %> 
        </div>
    </div>

    <% include footer %>
<script src="js/app-min.js"></script>
</body>
</html>
